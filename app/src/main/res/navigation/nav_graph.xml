<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/editNoteFragment"
        android:name="com.example.simple_notepads.ui.noteManagement.EditNoteFragment"
        android:label="Edit Note"
        tools:layout="@layout/fragment_newnote">
        <action
            android:id="@+id/action_newNoteFragment_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_editNoteFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.simple_notepads.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_NewNoteFragment"
            app:destination="@id/newNoteFragment" />
        <action
            android:id="@+id/action_nav_home_to_EditNoteFragment"
            app:destination="@id/editNoteFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_about"
        android:name="com.example.simple_notepads.ui.about.AboutFragment"
        android:label="@string/menu_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/newNoteFragment"
        android:name="com.example.simple_notepads.ui.noteManagement.NewNoteFragment"
        android:label="New Note"
        tools:layout="@layout/fragment_newnote" >
        <action
            android:id="@+id/action_newNoteFragment_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_newNoteFragment_to_calculatorFragment"
            app:destination="@id/calculatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/calculatorFragment"
        android:name="com.example.simple_notepads.examples.calculator.CalculatorFragment"
        android:label="CalculatorFragment"
        tools:layout="@layout/fragment_calculator" >
        <action
            android:id="@+id/action_calculatorFragment_to_newNoteFragment"
            app:destination="@id/newNoteFragment" />
    </fragment>

</navigation>